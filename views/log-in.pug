//- extends index.pug
include includes/utils.pug

block logIn
  .form-container
    div(class='errors-container')
    h2 Log In
    form(class="logInForm")
      input(type="hidden" name="_csrf" value=csrfToken)
      include includes/login-fields.pug
      +btn("Log In", "btn btn-primary", "log-in")
    p Don't have an account?
      a.swapToSignUp  Sign up here.
    button.demo.btn.btn-primary(type='submit') Demo Login
