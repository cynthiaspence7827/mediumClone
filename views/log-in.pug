//- extends index.pug
include includes/utils.pug

block logIn
  //- script(defer type="module" src="js/logIn.js")
  .form-container
    .errors-container
    h2 Log In
    form(class="log-in-form" method="post" action="/api/users/token")

      //- input(type="hidden" name="_csrf" value=csrfToken)
      label(for="email") Email
      input(type="email" name="email" id="email")
      label(for="password") Password
      input(type="password" name="password" id="password")
      //- button(type="submit") Log-in
      +btn("Log In", "btn btn-primary", "log-in")
    p Don't have an account?
      a(href='/sign-up')   Sign up here.
    button.demo.btn.btn-primary(type='submit') Demo Login
