extends layout.pug

include includes/utils.pug

block content
    script(defer type="module" src="js/story.js")
    .form-container
        h2 Create Story
        form(class="create-story-form" action='/create' method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        +input("Title", "title", "text", "Title here...")
        +input("Message", "message", "textarea", "Enter a creative message for your post here...")
        +btn("Create Story", "btn btn-primary", "create-story-button")
        .story-redirect
            a(href='/')  Back to Home