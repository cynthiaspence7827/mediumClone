extends layout.pug

include includes/utils.pug

block content
    script(defer type="module" src="/js/story.js")
    .form-container
        h2 Create Story
        form(class="create-story-form" action="/api/stories" method='post')
            input(type='hidden' name='_csrf' value=csrfToken)
            +input("title", "title", "text", "Title here...")
            +input("body", "body", "textarea", "Enter a creative message for your post here...")
            +btn("Create Story", "create-story-button", "create-story-button")
        .story-redirect
            a(href='/')  Back to Home
