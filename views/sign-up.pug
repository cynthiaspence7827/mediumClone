extends splash.pug

block content
  .form-container
    .errors-container
    h2 Sign Up
    form(class="sign-up-form" method="post" action="/sign-up")
      //- input(type="hidden" name="_csrf" value=csrfToken)
      +input("First Name", "firstName", "text", "First Name")
      +input("Last Name", "lastName", "text", "Last Name")
      +input("Username", "username", "text", "Username")
      include includes/login-fields.pug
      +input("Confirm Password", "confirmPassword", "password", "Confirm Password")
      +btn("Sign Up", "btn btn-primary", "sign-up")
    p Already have an account?
      a(href='/log-in')   Log in here.
  script(type="module" src="js/signUp.js")
